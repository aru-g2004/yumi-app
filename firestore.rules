rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      // NOTE: Hardcoding email in rules is risky if email isn't verified, but functional for now.
      return request.auth != null && (request.auth.token.email == 'anikagupta2004@gmail.com');
    }
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // ===== ADMIN ACCESS =====
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // ===== USER PROFILES =====
    match /users/{userId}/profile/data {
      allow read: if isSignedIn();
      // Allow Update if Signed In (Needed for "Purchase" to add coins to creator)
      allow update: if isSignedIn();
      allow create: if isOwner(userId);
    }
    
    // ===== USER THEMES =====
    match /users/{userId}/themes/{themeId} {
      allow read: if isSignedIn();
      // Allow Update if Signed In (Needed for "Purchase" to increment totalPurchases on creator's theme)
      allow update: if isSignedIn(); 
      allow create, delete: if isOwner(userId);
      
      // Characters subcollection
      match /characters/{characterId} {
        allow read: if isSignedIn();
        allow write: if isOwner(userId);
      }
    }
    
    // ===== USER COLLECTIONS =====
    match /users/{userId}/collection/{itemId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }
    
    // ===== PUBLIC THEMES =====
    match /public_themes/{themeId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
